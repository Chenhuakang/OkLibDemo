<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hwc.oklib.view.CommonToolBar
            android:id="@+id/tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_pressed_alpha="0.1" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_pressed_alpha="0" />
            <!--透明度改为0，则按下去的效果看不到-->

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_pressed_alpha="0.1" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image03"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_pressed_alpha="0" />
        </LinearLayout>


        <!--通过java设置显示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image14"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!--通过xml属性设置显示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_border_color="@color/oklib_red"
                app:oklib_siv_border_width="1dp"
                app:oklib_siv_pressed_alpha="0.2"
                app:oklib_siv_pressed_color="@color/oklib_red"
                app:oklib_siv_radius="5dp" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_border_color="@color/orange"
                app:oklib_siv_border_width="2dp"
                app:oklib_siv_pressed_alpha="0.3"
                app:oklib_siv_pressed_color="@color/orange"
                app:oklib_siv_radius="15dp"
                app:oklib_siv_shape_type="rectangle" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_border_color="@color/oklib_yellow"
                app:oklib_siv_border_width="3dp"
                app:oklib_siv_pressed_alpha="0.3"
                app:oklib_siv_pressed_color="@color/oklib_yellow"
                app:oklib_siv_shape_type="circle" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image24"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:oklib_siv_border_color="@color/oklib_colorPrimary"
                app:oklib_siv_border_width="5dp"
                app:oklib_siv_pressed_alpha="0.5"
                app:oklib_siv_pressed_color="@color/oklib_white"
                app:oklib_siv_shape_type="circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:oklib_siv_border_color="@color/oklib_yellow"
                app:oklib_siv_border_width="1dp" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:oklib_siv_radius="5dp" />

            <com.hwc.oklib.imageloader.gimage.GlideImageView
                android:id="@+id/image34"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:oklib_siv_border_color="@color/orange"
                app:oklib_siv_border_width="1dp"
                app:oklib_siv_radius="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/left_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <com.hwc.oklib.imageloader.gimage.GlideImageView
                    android:id="@+id/image41"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="@string/transitional_image" />

                <com.hwc.oklib.imageloader.gimage.progress.CircleProgressView
                    android:id="@+id/progressView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:progress="0"
                    app:oklib_cpv_innerPadding="2dp"
                    app:oklib_cpv_outerColor="@color/transparent90_white"
                    app:oklib_cpv_outerSize="1dp"
                    app:oklib_cpv_progressNormalColor="@color/transparent"
                    app:oklib_cpv_progressReachColor="@color/transparent90_white"
                    app:oklib_cpv_progressStyle="FillInnerArc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/right_image"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <com.hwc.oklib.imageloader.gimage.GlideImageView
                    android:id="@+id/image42"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="@string/transitional_image" />

                <com.hwc.oklib.imageloader.gimage.progress.CircleProgressView
                    android:id="@+id/progressView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:progress="0"
                    app:oklib_cpv_progressNormalColor="@color/transparent10"
                    app:oklib_cpv_progressReachColor="@color/transparent90_white"
                    app:oklib_cpv_progressStyle="FillInner"
                    app:oklib_cpv_progressTextColor="@color/red"
                    app:oklib_cpv_progressTextSize="13sp"
                    app:oklib_cpv_progressTextVisible="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>
        </LinearLayout>

