<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hwc.oklib.view.CommonToolBar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_common_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="菊花加载窗口" />

            <Button
                android:id="@+id/btn_context_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="圆形进度加载窗口（头尾风格）" />

            <Button
                android:id="@+id/btn_context_progress_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="水平进度加载窗口" />

            <Button
                android:id="@+id/btn_context_progress_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="圆形进度加载窗口（错位风格）" />

            <Button
                android:id="@+id/btn_material_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:text="material风格中立、取消、确定窗口" />

            <Button
                android:id="@+id/btn_multichoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:text="多选窗口" />

            <Button
                android:id="@+id/btn_singlechoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:text="单选窗口" />

            <Button
                android:id="@+id/btn_ios_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ios风格中立、取消、确定" />

            <Button
                android:id="@+id/btn_ios_alert_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ios风格竖向确定、取消窗口" />

            <Button
                android:id="@+id/btn_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="输入窗口" />

            <Button
                android:id="@+id/btn_ios_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ios底部弹起可滚动窗口" />

            <Button
                android:id="@+id/btn_ios_center_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="ios屏幕居中可滚动窗口" />

            <Button
                android:id="@+id/btn_md_bs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="material风格底部弹起可伸缩滑动窗口" />

            <Button
                android:id="@+id/btn_md_bs_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="material风格底部弹起可伸缩上listview窗口" />

            <Button
                android:id="@+id/btn_md_bs_Gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="material风格底部弹起可伸缩上gridview窗口" />

            <Button
                android:id="@+id/btn_customview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="自定义显示web页面窗口" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>