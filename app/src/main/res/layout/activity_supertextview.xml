        <com.hwc.oklib.view.stv.SuperTextView
            android:id="@+id/stv_22"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:text="shader_topToBottom"
            android:textColor="@color/oklib_white"
            android:textSize="14sp"
            app:oklib_corner="10dp"
            app:oklib_shaderEnable="true"
            app:oklib_shaderEndColor="@color/oklib_pink"
            app:oklib_shaderMode="topToBottom"
            app:oklib_shaderStartColor="@color/oklib_main_blue"
            app:oklib_solid="@color/oklib_main_blue" />

        <com.hwc.oklib.view.stv.SuperTextView
            android:id="@+id/stv_23"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:text="shader_bottomToTop"
            android:textColor="@color/oklib_white"
            android:textSize="14sp"
            app:oklib_corner="10dp"
            app:oklib_shaderEnable="true"
            app:oklib_shaderEndColor="@color/oklib_pink"
            app:oklib_shaderMode="bottomToTop"
            app:oklib_shaderStartColor="@color/oklib_main_blue"
            app:oklib_solid="@color/oklib_main_blue" />

        <com.hwc.oklib.view.stv.SuperTextView
            android:id="@+id/stv_24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:text="shader_leftTopRight"
            android:textColor="@color/oklib_white"
            android:textSize="14sp"
            app:oklib_corner="10dp"
            app:oklib_shaderEnable="true"
            app:oklib_shaderEndColor="@color/oklib_pink"
            app:oklib_shaderMode="leftTopRight"
            app:oklib_shaderStartColor="@color/oklib_main_blue"
            app:oklib_solid="@color/oklib_main_blue" />

        <com.hwc.oklib.view.stv.SuperTextView
            android:id="@+id/stv_26"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:text="shader_rightToLeft"
            android:textColor="@color/oklib_white"
            android:textSize="14sp"
            app:oklib_corner="10dp"
            app:oklib_shaderEnable="true"
            app:oklib_shaderEndColor="@color/oklib_pink"
            app:oklib_shaderMode="rightToLeft"
            app:oklib_shaderStartColor="@color/oklib_main_blue"
            app:oklib_solid="@color/oklib_main_blue" />

    </LinearLayout>
