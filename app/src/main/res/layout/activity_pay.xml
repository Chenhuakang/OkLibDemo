<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hwc.oklib.view.CommonToolBar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_headPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_headPortrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入头像url"
            android:maxLines="4"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入名称"
            android:maxLines="4"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入介绍内容"
            android:maxLines="4"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入金额，最低100元"
            android:inputType="number"
            android:maxLines="4"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_referralLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="链接*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_referralLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入推广链接url"
            android:maxLines="4"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />


</LinearLayout>