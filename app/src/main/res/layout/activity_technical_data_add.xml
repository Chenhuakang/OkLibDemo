<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hwc.oklib.view.CommonToolBar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/technical_data_intro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:autoLink="web"
        android:text="@string/jianshu_url" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_inviteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_inviteCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入4位邀请码"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="是否记住" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_headPortrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_headPortrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入头像url"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入名称"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入介绍内容"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_referralLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="链接*" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <com.hwc.oklib.view.EditTextWithDelete
            android:id="@+id/ed_referralLinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入资料链接url"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f0f0f0" />

</LinearLayout>
