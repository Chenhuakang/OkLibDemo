<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/oklib_selector_trangle"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/oklib_selector_grey_tltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="置顶"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_gou"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/oklib_multi_select_list_pop_check_mark_purple"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="#f0f0f0" />

</LinearLayout>