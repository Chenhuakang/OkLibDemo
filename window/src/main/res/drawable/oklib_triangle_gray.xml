
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="5%"
            android:pivotY="105%">
            <shape android:shape="rectangle">
                <solid android:color="#EAEAEA" />
                <stroke
                    android:width="0.5dp"
                    android:color="#EAEAEA" />
            </shape>
        </rotate>
    </item>
</layer-list>